<?xml version="1.0" encoding="utf-8"?>
        <!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD//EN"
                "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="model.Team" table="team">
        <meta attribute="class-description">
            This class contains developer's details.
        </meta>
        <id name="id" type="long" column="idTeam">
            <generator class="native"/>
        </id>
        <property name="name" column="teamName" type="string"/>
        <property name="teamStatus" column="status" type="string"/>
    </class>
</hibernate-mapping>
